<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tezra.rpiwalk.app.MainAct"
    android:clickable="false"
    android:focusable="false">

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/start"
        android:autoText="false"
        android:hint="@string/from_string"
        android:minWidth="200dp"
        android:layout_above="@+id/finish"
        android:layout_toLeftOf="@+id/my_loc"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/finish"
        android:hint="@string/finish_string"
        android:singleLine="true"
        android:minWidth="200dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/my_loc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_route_button"
        android:id="@+id/find"
        android:onClick="findRoute"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/finish"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/my_loc"
        android:onClick="myLoc"
        android:layout_alignTop="@+id/start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/location_icon" />
</RelativeLayout>
